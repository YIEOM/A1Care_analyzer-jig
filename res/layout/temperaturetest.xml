<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="531px"
        android:layout_marginTop="18px"
        android:src="@drawable/main_usb" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   	
   	<Button
        android:id="@+id/escicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="728px"
        android:background="@drawable/esc_selector" />
   	
   	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:text="Chamber Temp."
        android:layout_marginLeft="158px"
        android:layout_marginTop="169px" />
   	
    <TextView
        android:id="@+id/cellblocktemptext"
        android:layout_width="271px"
        android:layout_height="62px"
        android:layout_marginLeft="361px"
        android:layout_marginTop="148px"
        android:paddingLeft="10px"
        android:textSize="40px"
        android:textColor="#565656"
        android:background="@drawable/af_slope_box" />
            
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:text="Inside Temp."
        android:layout_marginLeft="166px"
        android:layout_marginTop="324px" />

    <TextView
        android:id="@+id/ambienttemptext"
        android:layout_width="271px"
        android:layout_height="62px"
        android:layout_marginLeft="361px"
        android:layout_marginTop="304px"
        android:paddingLeft="10px"
        android:textSize="40px"
        android:textColor="#565656"
        android:background="@drawable/af_intercept_box" />

</RelativeLayout>