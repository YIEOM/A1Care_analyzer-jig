<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/title" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="531px"
        android:layout_marginTop="18px"
        android:src="@drawable/main_usb" />
    
   	<TextView
        android:id="@+id/timeText" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24px"
        android:textColor="#444444"
        android:shadowColor="#7F000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:layout_marginLeft="578px"
        android:layout_marginTop="15px" />
   	
   	<Button
        android:id="@+id/escicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="728px"
        android:background="@drawable/esc_selector" />

    <Button
        android:id="@+id/setbtn"
        android:layout_width="129px"
        android:layout_height="57px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="150px"
        android:gravity="center"
	    android:text="SET"
	    android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28px"
        android:textColor="#565656"
        android:background="@drawable/btn_selector5" />
   	
	<EditText
        android:id="@+id/tmpetext"
        android:layout_width="200px"
        android:layout_height="62px"
        android:layout_marginLeft="361px"
        android:layout_marginTop="148px"
        android:gravity="center"
        android:paddingLeft="10px"
        android:ems="10"
        android:textSize="40px"
        android:textColor="#565656"
        android:singleLine="true" 
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:longClickable="false"
        android:background="@drawable/af_slope_box" />
	
	<Button
        android:id="@+id/readbtn"
        android:layout_width="129px"
        android:layout_height="57px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="250px"
        android:gravity="center"
	    android:text="READ"
	    android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28px"
        android:textColor="#565656"
        android:background="@drawable/btn_selector5" />
	
	<TextView
        android:id="@+id/tmptext"
        android:layout_width="200px"
        android:layout_height="62px"
        android:layout_marginLeft="361px"
        android:layout_marginTop="250px"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="40px"
        android:textColor="#00AA00"
        android:background="@drawable/af_slope_box" />
	
</RelativeLayout>